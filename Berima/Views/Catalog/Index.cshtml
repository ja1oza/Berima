
@{
    ViewData["Title"] = "Index";
}

<h2>商品一覧</h2>

<div class="row">
    @foreach (var commodity in (List<Commodity>)ViewData["commodities"])
    {
        <div class="col-md-4">
            <div class="row">
                <div class="col-sm-4">
                    <img src="@commodity.Icon" />
                </div>
                <div class="col-sm-8">
                    <h2>@commodity.Name</h2>
                    <p>@commodity.Price</p>
                </div>
            </div>
        </div>
    }
</div>
